{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% extends '@!EasyAdmin/crud/edit.html.twig'%}
{% block main %}
    {% block edit_form %}
        {{ form_start(edit_form) }}
        <div class="container">
            <div class="row">

                <div class="col-md-6 col-sm-12">
                    <div class="card tex-center">
                        {{ form_label(edit_form.equipespassee) }}
                        {{ form_widget(edit_form.equipepassee) }}
                        <span id="nom_photo">{{ entity.instance.photo }}</span>
                        {% if entity.instance.photo != null %}
                            <img src="{{ asset('odpf/odpf-archives/'~entity.instance.editionspassees.edition~'/photoseq/'~entity.instance.photo) }}" class="img-fluid" style=" margin: auto; width:240px"  id="photo">
                        {% else %}
                            <img src="{{ asset('odpf/odpf-images/site-logo-150x43.png') }}" class="photolist" style=" margin: auto" id="picture">
                        {% endif %}
                        {{ form_row(edit_form.photoFile) }}
                        {{ form_label(edit_form.typeSujet) }}
                        {{ form_widget(edit_form.typeSujet) }}
                    </div>

                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="card text-center">
                        {{ form_row(edit_form.national) }}
                        {{ form_row(edit_form.editionspassees) }}
                        {{ form_row(edit_form.coment) }}

                    </div>
                </div>

            </div>


        {{ form_end(edit_form) }}
    {% endblock edit_form %}

    {% block delete_form %}
        {{ include('@EasyAdmin/crud/includes/_delete_form.html.twig', { entity_id: entity.primaryKeyValue }, with_context = false) }}
    {% endblock delete_form %}
{% endblock %}